// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  emailVerified Boolean @default(false)
  lastLoginAt   DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  contents Content[]
  chatSessions ChatSession[]
  studySessions StudySession[]
  userWords UserWord[]
  voiceSessions VoiceSession[]
  refreshTokens RefreshToken[]
  resetTokens   PasswordResetToken[]

  @@map("users")
}

model Content {
  id          String      @id @default(cuid())
  title       String
  content     String
  type        ContentType @default(TEXT)
  tags        String[]
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("contents")
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
  voiceSessions VoiceSession[]

  @@map("chat_sessions")
}

model ChatMessage {
  id            String   @id @default(cuid())
  sessionId     String
  role          String   // 'user' | 'assistant'
  content       String
  createdAt     DateTime @default(now())

  // Relations
  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

model StudySession {
  id        String   @id @default(cuid())
  userId    String
  duration  Int      // in minutes
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("study_sessions")
}

// 单词表
model Word {
  id          String   @id @default(cuid())
  word        String   @unique
  phonetic    String?
  meaning     String
  type        String?  // 词性: n., v., adj., adv. 等
  level       String?  // 词汇等级: 四级, 六级, 考研等
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  options     WordOption[]
  userWords   UserWord[]
  practiceRecords PracticeRecord[]

  @@map("words")
}

// 单词选项(用于选择题)
model WordOption {
  id        String   @id @default(cuid())
  wordId    String
  type      String?  // 词性
  meaning   String   // 选项的意思
  isCorrect Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@map("word_options")
}

// 用户单词关系(记录用户学习的单词)
model UserWord {
  id            String   @id @default(cuid())
  userId        String
  wordId        String
  seenCount     Int      @default(0)  // 见过次数
  correctCount  Int      @default(0)  // 答对次数
  wrongCount    Int      @default(0)  // 答错次数
  lastSeenAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([userId, wordId])
  @@map("user_words")
}

// 练习记录
model PracticeRecord {
  id          String   @id @default(cuid())
  userId      String
  wordId      String
  isCorrect   Boolean
  timeSpent   Int      // 答题耗时(秒)
  createdAt   DateTime @default(now())

  // Relations
  word Word @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@map("practice_records")
}

enum ContentType {
  TEXT
  AUDIO
  VIDEO
}

// 语音会话
model VoiceSession {
  id        String   @id @default(cuid())
  userId    String
  chatId    String?  // 关联到现有聊天会话
  startedAt DateTime @default(now())
  endedAt   DateTime?
  duration  Int?     // 通话时长（秒）
  model     String   @default("qwen3-omni-flash-realtime")

  // Relations
  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat     ChatSession?   @relation(fields: [chatId], references: [id], onDelete: SetNull)
  messages VoiceMessage[]

  @@index([userId])
  @@index([chatId])
  @@map("voice_sessions")
}

// 语音消息
model VoiceMessage {
  id        String       @id @default(cuid())
  sessionId String
  role      String       // 'user' | 'assistant'
  content   String       @db.Text // 转录文本
  audioUrl  String?      // 可选：音频文件URL
  timestamp DateTime     @default(now())

  // Relations
  session VoiceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([timestamp])
  @@map("voice_messages")
}
